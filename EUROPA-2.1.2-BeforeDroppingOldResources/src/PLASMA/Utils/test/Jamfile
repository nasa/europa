SubDir PLASMA Utils test ;

if ! $(PLASMA_READY) {

SubDirHdrs $(PLASMA) ConstraintEngine component ;

if $(OS) = CYGWIN {
ModuleLibraries utils-module-tests : cppunit log4cxx apr-1 aprutil-1 ;
} else {
ModuleLibraries utils-module-tests : cppunit log4cxx ;
}

ModuleMain utils-module-tests
 : module-tests.cc util-test-module.cc LoggerTest.cc Log4cxxTest.cc
 : Utils ;
RunModuleMain run-utils-module-tests : utils-module-tests ;
LocalDepends tests : run-utils-module-tests ;

} # PLASMA_READY
