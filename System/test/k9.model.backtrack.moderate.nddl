class Rover {

  Position m_position;
  Tracker m_tracker;
  OpportunisticScience m_oppsci;
  CHAMP m_champ;
  Energy m_energy;

  float BATTERY_MIN;
  float BATTERY_MAX;

  Rover(float ic) {    
    BATTERY_MIN = 0.0;
    BATTERY_MAX = 518400.0;
    m_position = new Position(this);
    m_tracker = new Tracker(this);
    m_oppsci = new OpportunisticScience (this);
    m_champ = new CHAMP (this);
    m_energy = new Energy(ic, 0.0, 518400.0);
  }

}

